# 216labs — Caddy reverse proxy (port-based routing)
#
# Each app gets its own port so assets resolve correctly.
# When you have a domain, switch to subdomain-based routing
# and set DOMAIN in .env for auto HTTPS.

:8001 {
	reverse_proxy ramblingradio:5000
}

:8002 {
	reverse_proxy stroll:5000
}

:8003 {
	reverse_proxy onefit:3000
}

:8004 {
	reverse_proxy paperframe-frontend:3000
}

:8005 {
	reverse_proxy hivefind:3000
}

:8006 {
	reverse_proxy pipesecure:3000
}

:8007 {
	reverse_proxy admin:3000
}

:8008 {
	reverse_proxy agimemes:5000
}

:8009 {
	reverse_proxy agitshirts:5000
}

:8010 {
	reverse_proxy priors:5000
}

:80 {
	respond "216labs — ramblingradio(:8001) stroll(:8002) onefit(:8003) paperframe(:8004) hivefind(:8005) pipesecure(:8006) admin(:8007) agimemes(:8008) agitshirts(:8009) priors(:8010)" 200
}
