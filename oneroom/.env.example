# OpenAI — server-side key used for daily emails and as fallback for the daily look tab
OPENAI_API_KEY=

# JWT secret for auth cookies — change this in production!
JWT_SECRET=oneroom-dev-secret-change-in-production

# Set to "true" when running behind HTTPS (e.g. production)
FORCE_HTTPS=false

# Resend — for sending daily outfit emails (https://resend.com)
RESEND_API_KEY=

# From address for daily emails (must be a verified Resend domain)
EMAIL_FROM=OneFit Daily <daily@yourdomain.com>

# Public app URL (used in email footer links)
APP_URL=https://yourdomain.com

# Secret to protect the /api/send-daily-email endpoint from unauthorised calls
# Set this in your cron job: Authorization: Bearer <CRON_SECRET>
CRON_SECRET=change-this-to-a-long-random-secret
